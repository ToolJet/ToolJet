{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "Nocodb datasource",
  "description": "A schema defining Nocodb datasource",
  "type": "api",
  "source": {
    "name": "NocoDB",
    "kind": "nocodb",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "api_token": {
        "encrypted": true
      }
    },
    "customTesting": true
  },
  "defaults": {
    "api_token": {
      "value": ""
    },
    "api_version": {
      "value": "v3"
    }
  },
  "properties": {
    "host": {
      "label": "Host",
      "key": "nocodb_host",
      "type": "dropdown-component-flip",
      "description": "Single select dropdown for choosing certificates",
      "list": [
        {
          "value": "nocodb_cloud",
          "label": "Nocodb Cloud"
        },
        {
          "value": "self_hosted",
          "label": "Self Hosted"
        }
      ],
      "commonFields": {
        "api_token": {
          "label": "API token",
          "key": "api_token",
          "type": "password",
          "description": "API token for nocodb",
          "hint": "Your NocoDB API token. Read [here](https://nocodb.com/docs/product-docs/account-settings/api-tokens) to get one."
        },
        "api_version": {
          "label": "API Version",
          "key": "api_version",
          "type": "dropdown-component-flip",
          "description": "Choose api version",
          "hint": "Choose the api version to use. It is recommended to use API v3 when able.",
          "list": [
            {
              "value": "v2",
              "label": "API v2"
            },
            {
              "value": "v3",
              "label": "API v3"
            }
          ]
        }
      }
    },
    "self_hosted": {
      "base_url": {
        "label": "Base URL",
        "key": "base_url",
        "type": "text",
        "description": "Base URL for self hosted nocodb"
      }
    }
  },
  "required": [
    "api_token"
  ]
}