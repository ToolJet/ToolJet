      "label": "Port",
      "key": "port",
      "type": "text",
      "description": "Enter port"
    },
    "database": {
      "label": "Database Name",
      "key": "database",
      "type": "text",
      "description": "Name of the database"
    },
    "username": {
      "label": "Username",
      "key": "username",
      "type": "text",
      "description": "Enter username"
    },
    "password": {
      "label": "Password",
      "key": "password",
      "type": "password",
      "description": "Enter password"
