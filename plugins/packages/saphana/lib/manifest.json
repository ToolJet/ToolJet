{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "SAP HANA datasource",
  "description": "A schema defining SAP HANA datasource",
  "type": "database",
  "source": {
    "name": "SAP HANA",
    "kind": "saphana",
    "exposedVariables": {
