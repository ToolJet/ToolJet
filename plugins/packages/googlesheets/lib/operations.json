      "list": [
        {
          "value": "read",
          "name": "Read data from a spreadsheet"
        },
        {
          "value": "append",
          "name": "Append data to a spreadsheet"
        },
        {
          "value": "info",
          "name": "Get spreadsheet info"
        },
        {
