{
  "$schema": "https://json-schema.org/",
  "$id": "https://tooljet.io/Firestore.schema.json",
  "title": "Firestore datasource",
  "description": "A schema defining firestore datasource",
  "type": {
    "name": "Firestore",
    "kind": "firestore",
    "exposedVariables": {
      "isLoading": {},
      "data": [],
      "rawData": []
    },
    "options": {
      "gcp_key": { "type": "string", "encrypted": true }
    }
  },
  "properties": {
    "gcp_key": {
      "$label": "Private key",
      "$key": "gcp_key",
      "$rows": 15,
      "type": "textarea",
      "description": "Enter private key"
    }
  },
  "required": ["gcp_key"]
}
