{
  "compilerOptions": {
    "moduleResolution": "node",
    "types": [
      "node",
      "rxjs"
    ],
    "resolveJsonModule": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@ee/*": [
        "ee/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@dto/*": [
        "src/dto/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}