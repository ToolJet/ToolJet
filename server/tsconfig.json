{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@services/*": [
        "src/services/*"
      ],
      "@plugins/*": [
        "plugins/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@dto/*": [
        "src/dto/*"
      ],
    }
  }
}