{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/../src/$1",
    "@plugins/(.*)": "<rootDir>/../plugins/$1",
    "@services/(.*)": "<rootDir>/../src/services/$1",
    "@controllers/(.*)": "<rootDir>/../src/controllers/$1"
  }
}
