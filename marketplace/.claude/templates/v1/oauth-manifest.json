{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "{{PLUGIN_NAME}} datasource",
  "description": "{{PLUGIN_DESCRIPTION}}",
  "type": "api",
  "source": {
    "name": "{{PLUGIN_DISPLAY_NAME}}",
    "kind": "{{PLUGIN_KIND}}",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {},
    "customTesting": true
  },
  "defaults": {
    "authType": {
      "value": "oauth2"
    },
    "grantType": {
      "value": "authorization_code"
    },
    "authUrl": {
      "value": "{{OAUTH_AUTH_URL}}"
    },
    "accessTokenUrl": {
      "value": "{{OAUTH_TOKEN_URL}}"
    },
    "scopes": {
      "value": "{{OAUTH_SCOPES}}"
    },
    "redirectUrl": {
      "value": "http://localhost:8082/oauth2/authorize"
    }
  },
  "properties": {
    "oauth": {
      "key": "oauth",
      "type": "react-component-oauth",
      "description": "OAuth configuration for {{PLUGIN_DISPLAY_NAME}}",
      "oauth_configs": {
        "allowed_field_groups": {
          "authorization_code": [
            "clientId",
            "clientSecret"
          ]
        },
        "allowed_auth_types": [
          "oauth2"
        ],
        "allowed_grant_types": [
          "authorization_code"
        ],
        "allowed_scope_field": true
      }
    }
  },
  "required": []
}