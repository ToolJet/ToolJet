{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "Xero Datasource",
  "description": "Integrate with Xero Accounting API",
  "type": "api",
  "source": {
    "name": "Xero",
    "kind": "xero",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "client_secret": {
        "type": "string",
        "encrypted": true
      }
    },
    "customTesting": true
  },
  "defaults": {
    "oauth_type": {
      "value": "custom_app"
    },
    "access_token_custom_headers": {
      "value": [["Content-Type", "application/x-www-form-urlencoded"]]
    },
    "redirect_url": {
      "value": "http://localhost:8082/oauth2/authorize"
    },
    "auth_url": {
      "value": "https://login.xero.com/identity/connect/authorize"
    },
    "allowed_auth_types": {
      "value": "oauth2"
    },
    "auth_type": {
      "value": "oauth2"
    },
    "grant_type": {
      "value": "authorization_code"
    },
    "scopes": {
      "value": "openid profile email accounting.transactions accounting.reports.read accounting.reports.tenninetynine.read accounting.journals.read accounting.settings accounting.contacts accounting.attachments accounting.budgets.read payroll.employees payroll.payruns payroll.payslip payroll.timesheets payroll.settings files assets projects"
    },
    "oauth_type": {
      "value": "custom_app"
    },
    "access_token_url": {
      "value": "https://identity.xero.com/connect/token"
    }
    },
  "properties": {
    "oauth": {
      "key": "oauth",
      "type": "react-component-oauth",
      "description": "A component for Xero integration",
      "oauth_configs": {
        "allowed_field_groups": {
          "authorization_code": [
            "client_id",
            "client_secret"
          ]
        },
        "allowed_auth_types": [
          "oauth2"
        ],
        "allowed_grant_types": [
          "authorization_code"
        ],
        "allowed_scope_field": true
      }
    }
  },
  "required": ["client_id", "client_secret","scopes"]
}