{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "AWS Redshift datasource",
  "description": "A schema defining AWS Redshift datasource",
  "type": "database",
  "source": {
    "name": "AWS Redshift",
    "kind": "awsredshift",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "access_key": {
        "type": "string"
      },
      "secret_key": {
        "type": "string",
        "encrypted": true
      },
      "database": {
        "type": "string"
      },
      "workgroup_name": {
        "type": "string"
      },
      "region": {
        "type": "string"
      }
    }
  },
