      "from": {
        "label": "From Number",
        "key": "from",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "Enter from number",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins"
      },
      "body": {
        "label": "Body",
        "key": "body",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "Enter message body",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins",
