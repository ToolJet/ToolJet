{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "UPS datasource",
  "description": "A schema defining UPS datasource",
  "type": "api",
  "source": {
    "name": "UPS",
    "kind": "ups",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "environment": {
        "type": "string"
      },
      "client_id": {
        "type": "string"
      },
      "client_secret": {
        "type": "string",
        "encrypted": true
      },
      "shipper_number": {
        "type": "string"
      }
    }
  },
  "defaults": {
    "base_url": {
      "value": "https://wwwcie.ups.com"
    }
  },
  "properties": {
    "base_url": {
      "label": "Base url",
      "key": "base_url",
      "type": "dropdown-component-flip",
      "description": "Select the UPS environment",
      "list": [
        {
          "value": "https://onlinetools.ups.com",
          "name": "[https://onlinetools.ups.com] To be used in production"
        },
        {
          "value": "https://wwwcie.ups.com",
          "name": "[https://wwwcie.ups.com] Recommended for testing"
        }
      ]
    },
    "client_id": {
      "label": "Client id",
      "key": "client_id",
      "type": "text",
      "description": "Enter your UPS Client ID",
      "hint": "You can find your Client ID in your UPS developer account."
    },
    "client_secret": {
      "label": "Client secret",
      "key": "client_secret",
      "type": "password",
      "description": "Enter your UPS Client Secret",
      "hint": "You can find your Client Secret in your UPS developer account."
    },
    "shipper_number": {
      "label": "Shipper number",
      "key": "shipper_number",
      "type": "text",
      "description": "Enter your UPS Shipper Number",
      "hint": "This is your unique identifier for shipping with UPS."
    }
  },
  "required": [
    "environment",
    "client_id",
    "client_secret",
    "shipper_number"
  ]
}