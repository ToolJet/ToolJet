{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/operations.schema.json",
  "title": "EasyPost Operations",
  "description": "Operations for EasyPost shipping and tracking API",
  "type": "api",
  "defaults": {},
  "properties": {
    "operation": {
      "label": "Operation",
      "key": "operation",
      "type": "dropdown-component-flip",
      "description": "Select an EasyPost operation",
      "list": [
        {
          "value": "create_address",
          "name": "Create Address",
          "description": "Create and validate a shipping address"
        },
        {
          "value": "create_shipment",
          "name": "Create Shipment",
          "description": "Create a new shipment with rates"
        },
        {
          "value": "buy_shipment",
          "name": "Buy Shipment",
          "description": "Purchase a shipping label"
        },
        {
          "value": "create_tracker",
          "name": "Create Tracker",
          "description": "Track a package"
        },
        {
          "value": "get_tracker",
          "name": "Get Tracker",
          "description": "Get tracking information"
        }
      ]
    },
    "create_address": {
      "address": {
        "label": "Address",
        "key": "address",
        "type": "codehinter",
        "lineNumbers": true,
        "description": "Address object in JSON format",
        "width": "320px",
        "height": "200px",
        "className": "codehinter-plugins",
        "placeholder": "{\"name\": \"John Doe\", \"street1\": \"417 Montgomery Street\", \"city\": \"San Francisco\", \"state\": \"CA\", \"zip\": \"94104\", \"country\": \"US\"}",
        "validate": {
          "required": true,
          "json": true
        }
      },
      "verify": {
        "label": "Verification",
        "key": "verify",
        "type": "dropdown",
        "description": "Address verification level",
        "default": "none",
        "list": [
          {
            "value": "none",
            "name": "No verification"
          },
          {
            "value": "delivery",
            "name": "Delivery verification",
            "description": "Validates the address is deliverable"
          },
          {
            "value": "zip4",
            "name": "ZIP+4 verification",
            "description": "Validates and appends ZIP+4 code"
          }
        ]
      }
    },
    "create_shipment": {
      "shipment": {
        "label": "Shipment",
        "key": "shipment",
        "type": "codehinter",
        "lineNumbers": true,
        "description": "Shipment object in JSON format",
        "width": "320px",
        "height": "200px",
        "className": "codehinter-plugins",
        "placeholder": "{\"to_address\": {\"name\": \"John Doe\", \"street1\": \"417 Montgomery Street\", \"city\": \"San Francisco\", \"state\": \"CA\", \"zip\": \"94104\", \"country\": \"US\"}, \"from_address\": {\"company\": \"EasyPost\", \"street1\": \"417 Montgomery Street\", \"city\": \"San Francisco\", \"state\": \"CA\", \"zip\": \"94104\", \"country\": \"US\"}, \"parcel\": {\"length\": 10, \"width\": 5, \"height\": 8, \"weight\": 15}}",
        "validate": {
          "required": true,
          "json": true
        }
      }
    },
    "buy_shipment": {
      "shipment_id": {
        "label": "Shipment ID",
        "key": "shipment_id",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "ID of the shipment to buy (starts with shp_)",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins",
        "placeholder": "shp_123...",
        "validate": {
          "required": true,
          "pattern": "^shp_[a-zA-Z0-9]+$",
          "patternError": "Shipment ID must start with shp_"
        }
      },
      "rate_id": {
        "label": "Rate ID",
        "key": "rate_id",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "ID of the rate to purchase (starts with rate_)",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins",
        "placeholder": "rate_123...",
        "validate": {
          "required": true,
          "pattern": "^rate_[a-zA-Z0-9]+$",
          "patternError": "Rate ID must start with rate_"
        }
      }
    },
    "create_tracker": {
      "tracking_code": {
        "label": "Tracking Code",
        "key": "tracking_code",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "Carrier tracking code",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins",
        "placeholder": "940011189956...",
        "validate": {
          "required": true
        }
      },
      "carrier": {
        "label": "Carrier (optional)",
        "key": "carrier",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "Carrier name (e.g., USPS, FedEx, UPS)",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins",
        "placeholder": "USPS"
      }
    },
    "get_tracker": {
      "tracker_id": {
        "label": "Tracker ID",
        "key": "tracker_id",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "EasyPost tracker ID (starts with trk_)",
        "width": "320px",
        "height": "36px",
        "className": "codehinter-plugins",
        "placeholder": "trk_123...",
        "validate": {
          "required": true,
          "pattern": "^trk_[a-zA-Z0-9]+$",
          "patternError": "Tracker ID must start with trk_"
        }
      }
    }
  }
}