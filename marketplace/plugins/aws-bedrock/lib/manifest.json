{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "AWS Bedrock datasource",
  "description": "Plugin to use AI foundation models available on AWS",
  "type": "api",
  "source": {
    "name": "AWS Bedrock",
    "kind": "aws-bedrock",
    "customTesting": false,
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "access_key": {
        "type": "string"
      },
      "secret_access_key": {
        "type": "string",
        "encrypted": true
      },
      "region": {
        "type": "string"
      },
      "session_token": {
        "type": "string",
        "encrypted": true
      }
    }
  },
  "defaults": {
    "access_key": {
      "value": ""
    },
    "secret_access_key": {
      "value": ""
    },
    "region": {
      "value": ""
    },
    "session_token": {
      "value": ""
    }
  },
