{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "FedEx datasource",
  "description": "A schema defining FedEx datasource",
  "type": "api",
  "source": {
    "name": "FedEx",
    "kind": "fedex",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "client_id": {
        "type": "string"
      },
      "client_secret": {
        "type": "string",
        "encrypted": true
      },
      "customer_type": {
        "type": "string"
      },
      "redirect_url": {
        "type": "string"
      },
      "base_url": {
        "type": "string"
      },
      "child_key": {
        "type": "string"
      },
      "child_secret": {
        "type": "string",
        "encrypted": true
      }
    }
  },
  "defaults": {
    "redirect_url": {
      "value": ""
    },
    "allowed_auth_types": {
      "value": "oauth2"
    },
    "auth_type": {
      "value": "oauth2"
    },
    "grant_type": {
      "value": "client_credentials"
    },
    "oauth_type": {
      "value": "custom_app"
    },
    "customer_type": {
      "value": "standard_customers"
    }
  },
  "properties": {
    "base_url": {
      "label": "Base URL",
      "key": "base_url",
      "type": "dropdown",
      "description": "Base URL for FedEx API",
      "list": [
        {
          "label": "Production [https://apis.fedex.com]",
          "value": "https://apis.fedex.com"
        },
        {
          "label": "Sandbox [https://apis-sandbox.fedex.com]",
          "value": "https://apis-sandbox.fedex.com"
        }
      ]
    },
    "oauth": {
      "key": "oauth",
      "type": "react-component-oauth",
      "description": "OAuth configuration for FedEx",
      "oauth_configs": {
        "allowed_field_groups": {
          "client_credentials": [
            "client_id",
            "client_secret"
          ]
        },
        "allowed_auth_types": [
          "oauth2"
        ],
        "allowed_grant_types": [
          "client_credentials"
        ],
        "allowed_scope_field": false
      }
    },
    "customer_type": {
      "label": "Customer Type",
      "key": "customer_type",
      "type": "dropdown-component-flip",
      "description": "Select the Customer Type",
      "list": [
        {
          "label": "FedEx® Standard Customers",
          "value": "standard_customers"
        },
        {
          "label": "FedEx® Internal, Compatible, and Integrator customers",
          "value": "internal_customers"
        },
        {
          "label": "FedEx® Proprietary Parent Child customers",
          "value": "proprietary_parent_child_customers"
        }
      ]
    },
    "internal_customers": {
      "child_key": {
        "label": "Child key",
        "key": "child_key",
        "type": "text",
        "description": "Customer key returned through Credential Registration API request"
      },
      "child_secret": {
        "label": "Child secret",
        "key": "child_secret",
        "type": "password",
        "description": "Customer password returned through Credential Registration API request"
      }
    },
    "proprietary_parent_child_customers": {
      "child_key": {
        "label": "Child key",
        "key": "child_key",
        "type": "text",
        "description": "Enter child key"
      },
      "child_secret": {
        "label": "Child secret",
        "key": "child_secret",
        "type": "password",
        "description": "Customer password returned through Credential Registration API request"
      }
    }
  },
  "required": [
    "client_id",
    "client_secret"
  ]
}