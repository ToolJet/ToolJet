      "bucket": {
        "label": "Bucket",
        "key": "bucket",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "Enter bucket name",
        "height": "36px",
        "className": "codehinter-plugins",
        "placeholder": "Enter bucket name"
      },
      "scope": {
        "label": "Scope",
        "key": "scope",
        "type": "codehinter",
        "lineNumbers": false,
        "description": "Enter scope name (optional, defaults to _default)",
        "height": "36px",
        "className": "codehinter-plugins",
